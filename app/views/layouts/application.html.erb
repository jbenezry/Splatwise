<!DOCTYPE html>
<html>
  <head>
    <title>Splatwise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_url('favicon.png') %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Mansalva&display=swap" rel="stylesheet">

    <% if current_user  %>
    <%# below we set the currentUser to the window and then set it equal to an object with keys and values that match what's being rendered in our show.json.jbuilder file%>
      <script>
      
      window.currentUser = {
        'id': <%= current_user.id %>,
        'username': '<%= current_user.username %>'
      }
      </script>
    <% end %>
      <script type='text/javascript'>
        window.logoSquareURL = '<%= image_url('logo-square.svg') %>'
        window.logoWordmarkURL = '<%= image_url('logo-wordmark.png') %>'
        //window.planeURL = '<%= image_url('plane.svg') %>'
        window.houseURL = '<%= image_url('house.svg') %>'
        window.desktopURL = '<%= image_url('desktop.png') %>'
        window.mobileURL = '<%= image_url('mobile.png') %>'
        window.underConstructionURL = '<%= image_url('under-construction.svg') %>'
      </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
